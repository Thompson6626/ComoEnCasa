---
const pizzas = [
{
    name: "Americana",
    description: "Salsa de Tomate + Queso + Jamón",
    prices: ["10.00","17.00","28.00"]
    },
{
    name: "Peperoni",
    description: "Salsa de Tomate + Queso + Peperoni",
    prices: ["10.00","17.00","28.00"]
    },
    {
    name: "Hawaiana",
    description: "Salsa de Toamte + Queso + Piña + Jamón",
    prices: ["10.00","18.00","30.00"]
    },
    {
        name: "Africana",
        description: "Salsa de Tomate + Queso + Carne Molida + Chorizo + Aceitunas Negras",
        prices: ["10.00","20.00","32.00"]
    },
    {
        name: "Tropical",
        description: "Salsa de Tomate + Queso + Jamón + Piña + Durazno",
        prices: ["12.00","22.00","34.00"]
    },
    {
        name: "Carnivora",
        description: "Salsa de Tomate + Queso + Carne Molida + Chorizo + Tocino + Aceitunas Verdes + Pimientos",
        prices: ["12.00","22.00","36.00"]
    },
    {
        name: "Amazonica",
        description: "Salsa de Tomate + Queso + Chorizo Amazónico + Cabanozi + Cecina + Pimientos",
        prices: ["12.00","22.00","36.00"]
    },
    {
        name: "De La Casa",
        description: "Salsa de Tomate + Queso + Carne Molida + Peperoni + Jamón  + Tocino + Chorizo + Cabanosi + Aceitunas Verdes + Pimientos",
        prices: ["13.00","24.00","38.00"]
    },
];

---
<section id="menu" class="py-16 bg-gradient-to-b ">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <div class="inline-flex items-center justify-center gap-2 mb-4">
                <h2 class="text-3xl md:text-4xl font-bold text-white">Nuestras Pizzas</h2>
            </div>
        </div>

        {/* Size legend */}
        <div class="flex justify-end mb-6 max-w-5xl mx-auto">
            <div class="hidden md:flex items-center gap-8 bg-gray-800/50 px-6 py-2 rounded-full">
                <span class="text-sm font-medium text-gray-300">Tamaños:</span>
                <span class="text-sm font-medium text-white">Pequeña</span>
                <span class="text-sm font-medium text-white">Mediana</span>
                <span class="text-sm font-medium text-white">Familiar</span>
            </div>
        </div>

        <div class="max-w-5xl mx-auto">
            <div class="space-y-8">
                <div class="flex items-center gap-3">
                    <div class="h-0.5 flex-1 bg-gradient-to-r from-red-500 to-transparent"></div>
                </div>

                {/* Mobile price legend */}
                <div class="md:hidden flex justify-between items-center px-4 py-2 bg-gray-800/50 rounded-lg mb-4">
                    <span class="text-sm font-medium text-gray-300">Tamaños:</span>
                    <div class="flex gap-4">
                        <span class="text-sm font-medium text-white">P</span>
                        <span class="text-sm font-medium text-white">M</span>
                        <span class="text-sm font-medium text-white">F</span>
                    </div>
                </div>

                <div class="space-y-6">
                    {pizzas.map((item, index) => (
                            <div
                                    key={index}
                                    class="group p-4 rounded-lg transition-all duration-300 hover:bg-gray-800/50 border border-transparent hover:border-gray-700"
                            >
                                <div class="flex flex-col md:flex-row md:items-center gap-4">
                                    <div class="flex-1">
                                        <h4 class="text-xl md:text-2xl font-medium text-white group-hover:text-red-400 transition-colors">
                                            {item.name}
                                        </h4>
                                        <p class="text-gray-400 text-sm md:text-base mt-1">{item.description}</p>
                                    </div>

                                    {/* Mobile prices */}
                                    <div class="md:hidden flex justify-between items-center mt-2">
                                        <div class="flex gap-4 md:gap-8">
                                            {item.prices.map((price, i) => (
                                                    <div key={i} class="flex flex-col items-center">
                                                        <span class="text-xs text-gray-400">{i === 0 ? "P" : i === 1 ? "M" : "G"}</span>
                                                        <span class="text-lg font-medium text-white">{price}</span>
                                                    </div>
                                            ))}
                                        </div>
                                    </div>

                                    {/* Desktop prices */}
                                    <div class="hidden md:flex gap-8 lg:gap-16">
                                        {item.prices.map((price, i) => (
                                                <div key={i} class="w-16 text-center">
                                                    <span class="text-xl font-medium text-white">{price}</span>
                                                </div>
                                        ))}
                                    </div>
                                </div>
                            </div>
                    ))}
                </div>
            </div>
        </div>

        <div class="mt-12 text-center">
            <button class="bg-red-600 hover:bg-red-700 text-white py-3 px-8 rounded-full font-medium transition-all duration-300 transform hover:scale-105 hover:shadow-lg shadow-red-500/20 flex items-center gap-2 mx-auto">
                <span>Ver Menú Completo</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path
                            fillRule="evenodd"
                            d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                            clipRule="evenodd"
                    />
                </svg>
            </button>
        </div>
    </div>
</section>

